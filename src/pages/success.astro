---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <!-- Introduction -->
  <div class="mt-12 border-gray-100 border-t-2 py-8">
    <h1 class="text-4xl font-bold">Thank you for submitting! </h1>
    <p class="mt-6 text-lg text-gray-600">
      Our goal is to gather <b>100</b> great papers. If you have another great
      paper, please submit! If you don't, that's okay don't force it!
    </p>

    <a class="inline-flex flex-row items-center mt-8 text-lg font-semibold text-picton-blue-700"
      href="/">
      Submit another paper
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-6 w-6" fill="none"
        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</BaseLayout>
